<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MastermindMAUI.Main"
             Title="Mastermind">
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="White"/>
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="CornerRadius" Value="10"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <Grid ColumnDefinitions="1.5*, 1*, .27*, 1.5*">
        <Grid.Background>
            <RadialGradientBrush>
                <GradientStop Color="White" Offset=".30"/>
                <GradientStop Color="DodgerBlue" Offset="1"/>
            </RadialGradientBrush>
        </Grid.Background>

        <VerticalStackLayout Grid.Column="0" VerticalOptions="Start">
            <Label x:Name="lblMessage" Grid.Row="0" HorizontalOptions="Start" Margin="10, 20, 20, 5" FontSize="25" VerticalOptions="Start" TextColor="Orange" HeightRequest="100" />
            <Label x:Name="lblScore" Grid.Row="1" HorizontalOptions="Start" Margin="10, 20, 20, 20" FontSize="20" TextColor="White" Text="{Binding ScoreMessage}"/>
        </VerticalStackLayout>

        <VerticalStackLayout Grid.Column="0" VerticalOptions="End">
            <RadioButton x:Name="Game1Rb" HorizontalOptions="Start" Content="Game 1" IsChecked="true" Margin="10, 0, 0, 0" CheckedChanged="GameRb_CheckedChanged"/>
            <RadioButton x:Name="Game2Rb" HorizontalOptions="Start" Content="Game 2" IsChecked="false" Margin="10, 0, 0, 0" CheckedChanged="GameRb_CheckedChanged"/>
            <RadioButton x:Name="Game3Rb" HorizontalOptions="Start" Content="Game 3" IsChecked="false" Margin="10, 0, 0, 0" CheckedChanged="GameRb_CheckedChanged"/>
            <Label HorizontalOptions="Start" BackgroundColor="Black" HeightRequest="1" WidthRequest="200" Margin="10"/>
            <RadioButton x:Name="optBeginner" HorizontalOptions="Start" Content="Beginner" Value="Beginner" IsChecked="True" VerticalOptions="End" Margin="10, 0, 0, 0"/>
            <RadioButton x:Name="optAdvanced" HorizontalOptions="Start" Content="Advanced" Value="Advanced" VerticalOptions="Start" Margin="10, 0, 0, 0"/>
            <Grid ColumnDefinitions="*, *" RowDefinitions="*, Auto">
            <Button x:Name="btnNewGame"  HorizontalOptions="Start" Text="New Game" Grid.Column="0" Grid.Row="1" WidthRequest="150" HeightRequest="65" Margin="20" CornerRadius="2" VerticalOptions="End">
                <Button.Shadow>
                    <Shadow Brush="Gray"/>
                </Button.Shadow>
                <Button.Background>
                    <LinearGradientBrush>
                        <GradientStop Color="LimeGreen" Offset=".5"/>
                        <GradientStop Color="LawnGreen" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button x:Name="btnCheckCode" HorizontalOptions="Start" Text="Check Code" Grid.Column="1" Grid.Row="1" WidthRequest="150" HeightRequest="65" Margin="20" CornerRadius="2" VerticalOptions="End">
                <Button.Shadow>
                    <Shadow Brush="Gray"/>
                </Button.Shadow>
                <Button.Background>
                    <LinearGradientBrush>
                        <GradientStop Color="DeepPink" Offset=".5"/>
                        <GradientStop Color="HotPink" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            </Grid>
        </VerticalStackLayout>

        <Grid x:Name="LabelGrid" ColumnDefinitions="15, *, *, *, *, *, 15" RowDefinitions="2, *, *, *, *, *, *, *, *, *, *, *, 2" HorizontalOptions="Fill" RowSpacing="10" ColumnSpacing="5" BackgroundColor="White" Grid.Column="1" Margin="10">
            <Grid.Shadow>
                <Shadow Brush="Gray"/>
            </Grid.Shadow>

            <Grid ColumnDefinitions="*,*" RowDefinitions="*,*" Grid.Row="2" Grid.Column="1" Margin="2">
                <Label x:Name="lbl1" Grid.Column="0" Grid.Row="1" Margin="2"/>
                <Label x:Name="lbl2" Grid.Column="0" Grid.Row="0" Margin="2"/>
                <Label x:Name="lbl3" Grid.Column="1" Grid.Row="0" Margin="2"/>
                <Label x:Name="lbl4" Grid.Column="1" Grid.Row="1" Margin="2"/>
            </Grid>

            <Grid ColumnDefinitions="*,*" RowDefinitions="*,*" Grid.Row="3" Grid.Column="1" Margin="2">
                <Label x:Name="lbl5" Grid.Column="0" Grid.Row="1" Margin="2"/>
                <Label x:Name="lbl6" Grid.Column="0" Grid.Row="0" Margin="2"/>
                <Label x:Name="lbl7" Grid.Column="1" Grid.Row="0" Margin="2"/>
                <Label x:Name="lbl8" Grid.Column="1" Grid.Row="1" Margin="2"/>
            </Grid>

            <Grid ColumnDefinitions="*,*" RowDefinitions="*,*" Grid.Row="4" Grid.Column="1">
                <Label x:Name="lbl9" Grid.Column="0" Grid.Row="1" Margin="2"/>
                <Label x:Name="lbl10" Grid.Column="0" Grid.Row="0" Margin="2"/>
                <Label x:Name="lbl11" Grid.Column="1" Grid.Row="0" Margin="2"/>
                <Label x:Name="lbl12" Grid.Column="1" Grid.Row="1" Margin="2"/>
            </Grid>

            <Grid ColumnDefinitions="*,*" RowDefinitions="*,*" Grid.Row="5" Grid.Column="1">
                <Label x:Name="lbl13" Grid.Column="0" Grid.Row="1" Margin="2"/>
                <Label x:Name="lbl14" Grid.Column="0" Grid.Row="0" Margin="2"/>
                <Label x:Name="lbl15" Grid.Column="1" Grid.Row="0" Margin="2"/>
                <Label x:Name="lbl16" Grid.Column="1" Grid.Row="1" Margin="2"/>
            </Grid>

            <Grid ColumnDefinitions="*,*" RowDefinitions="*,*" Grid.Row="6" Grid.Column="1">
                <Label x:Name="lbl17" Grid.Column="0" Grid.Row="1" Margin="2"/>
                <Label x:Name="lbl18" Grid.Column="0" Grid.Row="0" Margin="2"/>
                <Label x:Name="lbl19" Grid.Column="1" Grid.Row="0" Margin="2"/>
                <Label x:Name="lbl20" Grid.Column="1" Grid.Row="1" Margin="2"/>
            </Grid>

            <Grid ColumnDefinitions="*,*" RowDefinitions="*,*" Grid.Row="7" Grid.Column="1">
                <Label x:Name="lbl21" Grid.Column="0" Grid.Row="1" Margin="2"/>
                <Label x:Name="lbl22" Grid.Column="0" Grid.Row="0" Margin="2"/>
                <Label x:Name="lbl23" Grid.Column="1" Grid.Row="0" Margin="2"/>
                <Label x:Name="lbl24" Grid.Column="1" Grid.Row="1" Margin="2"/>
            </Grid>

            <Grid ColumnDefinitions="*,*" RowDefinitions="*,*" Grid.Row="8" Grid.Column="1">
                <Label x:Name="lbl25" Grid.Column="0" Grid.Row="1" Margin="2"/>
                <Label x:Name="lbl26" Grid.Column="0" Grid.Row="0" Margin="2"/>
                <Label x:Name="lbl27" Grid.Column="1" Grid.Row="0" Margin="2"/>
                <Label x:Name="lbl28" Grid.Column="1" Grid.Row="1" Margin="2"/>
            </Grid>

            <Grid ColumnDefinitions="*,*" RowDefinitions="*,*" Grid.Row="9" Grid.Column="1">
                <Label x:Name="lbl29" Grid.Column="0" Grid.Row="1" Margin="2"/>
                <Label x:Name="lbl30" Grid.Column="0" Grid.Row="0" Margin="2"/>
                <Label x:Name="lbl31" Grid.Column="1" Grid.Row="0" Margin="2"/>
                <Label x:Name="lbl32" Grid.Column="1" Grid.Row="1" Margin="2"/>
            </Grid>

            <Grid ColumnDefinitions="*,*" RowDefinitions="*,*" Grid.Row="10" Grid.Column="1">
                <Label x:Name="lbl33" Grid.Column="0" Grid.Row="1" Margin="2"/>
                <Label x:Name="lbl34" Grid.Column="0" Grid.Row="0" Margin="2"/>
                <Label x:Name="lbl35" Grid.Column="1" Grid.Row="0" Margin="2"/>
                <Label x:Name="lbl36" Grid.Column="1" Grid.Row="1" Margin="2"/>
            </Grid>

            <Grid ColumnDefinitions="*,*" RowDefinitions="*,*" Grid.Row="11" Grid.Column="1">
                <Label x:Name="lbl37" Grid.Column="0" Grid.Row="1" Margin="2"/>
                <Label x:Name="lbl38" Grid.Column="0" Grid.Row="0" Margin="2"/>
                <Label x:Name="lbl39" Grid.Column="1" Grid.Row="0" Margin="2"/>
                <Label x:Name="lbl40" Grid.Column="1" Grid.Row="1" Margin="2"/>
            </Grid>

            <Button x:Name="btncode1" Grid.Column="2" Grid.Row="1" Style="{StaticResource Key=secret-code-button}"/>
            <Button x:Name="btncode2" Grid.Column="3" Grid.Row="1" Style="{StaticResource Key=secret-code-button}"/>
            <Button x:Name="btncode3" Grid.Column="4" Grid.Row="1" Style="{StaticResource Key=secret-code-button}"/>
            <Button x:Name="btncode4" Grid.Column="5" Grid.Row="1" Style="{StaticResource Key=secret-code-button}"/>

            <Button x:Name="btn1" Grid.Column="2" Grid.Row="2"/>
            <Button x:Name="btn2" Grid.Column="3" Grid.Row="2"/>
            <Button x:Name="btn3" Grid.Column="4" Grid.Row="2"/>
            <Button x:Name="btn4" Grid.Column="5" Grid.Row="2"/>

            <Button x:Name="btn5" Grid.Column="2" Grid.Row="3"/>
            <Button x:Name="btn6" Grid.Column="3" Grid.Row="3"/>
            <Button x:Name="btn7" Grid.Column="4" Grid.Row="3"/>
            <Button x:Name="btn8" Grid.Column="5" Grid.Row="3"/>

            <Button x:Name="btn9" Grid.Column="2" Grid.Row="4"/>
            <Button x:Name="btn10" Grid.Column="3" Grid.Row="4"/>
            <Button x:Name="btn11" Grid.Column="4" Grid.Row="4"/>
            <Button x:Name="btn12" Grid.Column="5" Grid.Row="4"/>

            <Button x:Name="btn13" Grid.Column="2" Grid.Row="5"/>
            <Button x:Name="btn14" Grid.Column="3" Grid.Row="5"/>
            <Button x:Name="btn15" Grid.Column="4" Grid.Row="5"/>
            <Button x:Name="btn16" Grid.Column="5" Grid.Row="5"/>

            <Button x:Name="btn17" Grid.Column="2" Grid.Row="6"/>
            <Button x:Name="btn18" Grid.Column="3" Grid.Row="6"/>
            <Button x:Name="btn19" Grid.Column="4" Grid.Row="6"/>
            <Button x:Name="btn20" Grid.Column="5" Grid.Row="6"/>

            <Button x:Name="btn21" Grid.Column="2" Grid.Row="7"/>
            <Button x:Name="btn22" Grid.Column="3" Grid.Row="7"/>
            <Button x:Name="btn23" Grid.Column="4" Grid.Row="7"/>
            <Button x:Name="btn24" Grid.Column="5" Grid.Row="7"/>
            
            <Button x:Name="btn25" Grid.Column="2" Grid.Row="8"/>
            <Button x:Name="btn26" Grid.Column="3" Grid.Row="8"/>
            <Button x:Name="btn27" Grid.Column="4" Grid.Row="8"/>
            <Button x:Name="btn28" Grid.Column="5" Grid.Row="8"/>

            <Button x:Name="btn29" Grid.Column="2" Grid.Row="9"/>
            <Button x:Name="btn30" Grid.Column="3" Grid.Row="9"/>
            <Button x:Name="btn31" Grid.Column="4" Grid.Row="9"/>
            <Button x:Name="btn32" Grid.Column="5" Grid.Row="9"/>

            <Button x:Name="btn33" Grid.Column="2" Grid.Row="10"/>
            <Button x:Name="btn34" Grid.Column="3" Grid.Row="10"/>
            <Button x:Name="btn35" Grid.Column="4" Grid.Row="10"/>
            <Button x:Name="btn36" Grid.Column="5" Grid.Row="10"/>

            <Button x:Name="btn37" Grid.Column="2" Grid.Row="11"/>
            <Button x:Name="btn38" Grid.Column="3" Grid.Row="11"/>
            <Button x:Name="btn39" Grid.Column="4" Grid.Row="11"/>
            <Button x:Name="btn40" Grid.Column="5" Grid.Row="11"/>

        </Grid>

        <VerticalStackLayout x:Name="ColorGrid" Grid.Column="2" Spacing="10" VerticalOptions="Center">
            <Button x:Name="btnPink"  BackgroundColor="DeepPink" Text="Pink" Style="{StaticResource Key=color-button}"/>
            <Button x:Name="btnYellow" BackgroundColor="Yellow" Text="Yellow" Style="{StaticResource Key=color-button}"/>
            <Button x:Name="btnGreen" BackgroundColor="LimeGreen" Text="Green" Style="{StaticResource Key=color-button}"/>
            <Button x:Name="btnBlue" BackgroundColor="DeepSkyBlue" Text="Blue" Style="{StaticResource Key=color-button}"/>
            <Button x:Name="btnPurple" BackgroundColor="Purple" Text="Purple" Style="{StaticResource Key=color-button}"/>
            <Button x:Name="btnBlack" BackgroundColor="Black" Text="Black" Style="{StaticResource Key=color-button}"/>

        </VerticalStackLayout>
        
        <Button x:Name="btnHelp" Text="?" HeightRequest="75" WidthRequest="75" VerticalOptions="End" HorizontalOptions="End" Margin="20" Grid.Column="3" CornerRadius="2">
            <Button.Shadow>
                <Shadow Brush="Gray"/>
            </Button.Shadow>
            <Button.Background>
                <LinearGradientBrush>
                    <GradientStop Color="DarkOrange" Offset=".2"/>
                    <GradientStop Color="Orange" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
    </Grid>
</ContentPage>